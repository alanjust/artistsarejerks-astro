---
import HiddenGrammarLayout from '../../../layouts/HiddenGrammarLayout.astro';
import lensesData from '../../../data/hg-lenses.json';

export async function getStaticPaths() {
  return lensesData.lenses.map((lens: any) => ({
    params: { lens: lens.id },
  }));
}

const { lens: lensId } = Astro.params;
const lens = lensesData.lenses.find((l: any) => l.id === lensId) as any;

if (!lens) {
  return Astro.redirect('/hidden-grammar/lenses');
}

const category = lensesData.categories.find((c: any) => c.id === lens.category) as any;

// Parse the prompt into structured parts in frontmatter
const promptParts = lens.prompt.split('\n\n');
const intro = promptParts[0] || '';
const movesBlock = promptParts[1] || '';
const rawLines = movesBlock.split('\n').filter((l: string) => l.startsWith('- '));
const verdictLine = rawLines.find((l: string) => l.startsWith('- Verdict:')) || '';
const moveLines = rawLines.filter((l: string) => !l.startsWith('- Verdict:'));
const verdict = verdictLine.replace(/^- Verdict:\s*/i, '').trim();

// Parse each move into { name, description }
const moves = moveLines.map((line: string) => {
  const withoutDash = line.replace(/^- /, '');
  const colonIdx = withoutDash.indexOf(':');
  if (colonIdx === -1) return { name: '', description: withoutDash };
  return {
    name: withoutDash.slice(0, colonIdx).trim(),
    description: withoutDash.slice(colonIdx + 1).trim(),
  };
});
---

<HiddenGrammarLayout title={`${lens.name} — Art Lab Lenses`}>
  <div class="lens-detail-page">

    <!-- ── BREADCRUMB ─────────────────────────────────────────── -->
    <nav class="hg-breadcrumb" aria-label="Breadcrumb">
      <a href="/hidden-grammar">Art Lab</a>
      <span class="hg-breadcrumb-sep">›</span>
      <a href="/hidden-grammar/lenses">Lenses</a>
      <span class="hg-breadcrumb-sep">›</span>
      <span>{lens.name}</span>
    </nav>

    <!-- ── HEADER ────────────────────────────────────────────── -->
    <header class="lens-header">
      <div class="lens-header-meta">
        {category && <span class="lens-category-label">{category.name}</span>}
      </div>
      <h1 class="lens-title">{lens.name}</h1>
      <p class="lens-thinker">Based on <strong>{lens.thinker}</strong></p>
      <blockquote class="lens-verdict-hero">{lens.tagline}</blockquote>
    </header>

    <!-- ── INTRO ─────────────────────────────────────────────── -->
    {intro && (
      <div class="lens-section">
        <h2 class="lens-section-title">The Framework</h2>
        <p class="lens-intro-text">{intro}</p>
      </div>
    )}

    <!-- ── ANALYTICAL MOVES ──────────────────────────────────── -->
    {moves.length > 0 && (
      <div class="lens-section">
        <h2 class="lens-section-title">The Analytical Moves</h2>
        <div class="lens-moves">
          {moves.map((move: any) => (
            <div class="lens-move">
              {move.name && <p class="lens-move-name">{move.name}</p>}
              <p class="lens-move-description">{move.description}</p>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- ── VERDICT ────────────────────────────────────────────── -->
    {verdict && (
      <div class="lens-section lens-section--verdict">
        <h2 class="lens-section-title">The Verdict Question</h2>
        <p class="lens-verdict-text">{verdict}</p>
      </div>
    )}

    <!-- ── MODIFIER NOTE ─────────────────────────────────────── -->
    <div class="lens-section lens-modifier-note">
      <h2 class="lens-section-title">Using This as a Modifier</h2>
      <p>Run any standard Hidden Grammar analysis, then select this lens from the <strong>Apply a Lens</strong> section in the results panel. The AI will re-read the same image through this framework — same visual evidence, different analytical brain.</p>
      <a href="/hidden-grammar/ai-analyze" class="hg-btn hg-btn--primary lens-modifier-cta">Open the AI Analyzer →</a>
    </div>

    <!-- ── BOTTOM NAV ─────────────────────────────────────────── -->
    <div class="lens-bottom-nav">
      <a href="/hidden-grammar/lenses" class="hg-btn hg-btn--ghost">← All Lenses</a>
    </div>

  </div>
</HiddenGrammarLayout>

