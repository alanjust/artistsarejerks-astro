    }

    .scale-section {
      margin-bottom: 1.5rem;
    }

    .scale-section h4 {
      font-size: 1rem;
      font-weight: 700;
      margin-bottom: 0.75rem;
      color: var(--color-orange);
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .scale-items {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .scale-item {
      display: flex;
      gap: 0.75rem;
      align-items: flex-start;
      font-size: 0.9rem;
      line-height: 1.4;
    }

    .scale-value {
      display: inline-block;
      background: var(--color-orange);
      color: white;
      width: 24px;
      height: 24px;
      border-radius: 50%;
      text-align: center;
      line-height: 24px;
      font-weight: bold;
      font-size: 0.85rem;
      flex-shrink: 0;
    }

    .scale-text {
      color: #444;
    }

    .prompts-section,
    .evidence-section {
      margin-bottom: 1.5rem;
    }

    .prompts-section h4,
    .evidence-section h4 {
      font-size: 1rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      color: var(--color-green);
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .prompts-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .prompts-list li {
      padding: 0.5rem 0.75rem;
      background: rgba(117, 200, 60, 0.05);
      border-left: 3px solid var(--color-green);
      margin-bottom: 0.5rem;
      font-size: 0.95rem;
      line-height: 1.5;
      font-style: italic;
    }

    .evidence-section p {
      margin: 0;
      padding: 0.75rem;
      background: rgba(245, 166, 35, 0.05);
      border-left: 3px solid var(--color-orange);
      font-size: 0.95rem;
      line-height: 1.5;
      color: #222;
    }

    .attention-footer {
      max-width: 1100px;
      margin: 4rem auto 0;
      padding: 2.5rem;
      background: rgba(255, 255, 255, 0.95);
      border-radius: 12px;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
      border-top: 4px solid var(--color-purple);
    }

    .attention-footer h2 {
      font-size: 2rem;
      margin-bottom: 1.5rem;
      color: var(--color-purple);
      text-align: center;
    }

    .attention-footer > p {
      font-size: 1.1rem;
      line-height: 1.7;
      margin-bottom: 2rem;
      color: #222;
    }

    .use-cases {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .use-case {
      padding: 1.5rem;
      background: rgba(114, 5, 170, 0.05);
      border-radius: 8px;
      border-left: 4px solid var(--color-purple);
    }

    .use-case h3 {
      font-size: 1.2rem;
      margin: 0 0 0.75rem 0;
      color: var(--color-purple);
    }

    .use-case p {
      margin: 0;
      line-height: 1.6;
      color: #222;
    }

    .final-note {
      padding: 1.5rem;
      background: rgba(245, 166, 35, 0.1);
      border-radius: 8px;
      border-left: 4px solid var(--color-orange);
    }

    .final-note p {
      margin: 0 0 1rem 0;
      font-size: 1.05rem;
      line-height: 1.7;
      color: #222;
    }

    .final-note ul {
      margin: 1rem 0;
      padding-left: 1.5rem;
    }

    .final-note li {
      margin-bottom: 0.5rem;
      line-height: 1.6;
    }

    @media (max-width: 768px) {
      .attention-header h1 {
        font-size: 2rem;
      }

      .metrics-grid {
        grid-template-columns: 1fr;
      }

      .attention-container {
        padding: 1rem;
      }

      .steps-grid {
        grid-template-columns: 1fr;
      }

      .use-cases {
        grid-template-columns: 1fr;
      }
    }
  </style>
</BaseLayout>
