---
import BaseLayout from '../layouts/BaseLayout.astro';
import artists from '../data/artists.json';
import artHistoryMovements from '../data/art_history_movements.json';

// Create a map of movement names to their background colors
const movementColorMap = new Map(
  artHistoryMovements.map(movement => [
    movement['Movement Name'],
    movement['Bkgd Color'] || '#ffa042'
  ])
);

// Function to get background color for an artist based on their movement
function getArtistBgColor(artist: any): string {
  // First try to get color from the artist's movement
  const movementColor = movementColorMap.get(artist['Art Movement']);
  if (movementColor) return movementColor;
  
  // Fallback to artist's own background color or default
  return artist['Bkgd Color'] || '#ffa042';
}

// Sort artists alphabetically by last name
const sortedArtists = [...artists].sort((a, b) => {
  const getLastName = (name: string) => {
    const parts = name.trim().split(' ');
    return parts[parts.length - 1];
  };
  return getLastName(a['Artist Name']).localeCompare(getLastName(b['Artist Name']));
});
---

<BaseLayout title="Artists - Artists Are Jerks" bodyClass="artists-page">
  <div class="artists-container">
    <header class="artists-header">
      <h1>Artists</h1>
      <p class="subtitle">1960s to NOW</p>
      <p class="description">
        Explore 95 influential artists who shaped contemporary culture. From Pop Art pioneers to today's digital innovators.
      </p>
    </header>

    <div class="artists-grid">
      {sortedArtists.map((artist) => (
        <a 
          href={`/artists/${artist.Slug}`}
          class="artist-card" 
          style={`background-color: ${getArtistBgColor(artist)};`}
        >
          {artist['Notable Artwork'] && (
            <div class="artist-image">
              <img src={artist['Notable Artwork']} alt={artist['Artist Name']} />
            </div>
          )}
          <div class="artist-info">
            <h2 class="artist-name">{artist['Artist Name']}</h2>
            <p class="artist-movement">{artist['Art Movement']}</p>
            {artist['Artwork Title'] && (
              <p class="artwork-title">{artist['Artwork Title']}</p>
            )}
          </div>
        </a>
      ))}
    </div>
  </div>

  <style>
    /* Page background override */
    :global(body.artists-page) {
      background: var(--color-bkg-golden-yellow); /* Golden yellow background */
    }

    .artists-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
    }

    .artists-header {
      text-align: center;
      margin-bottom: 3rem;
    }

    .artists-header h1 {
      font-size: 3rem;
      margin-bottom: 0.5rem;
      color: #000;
    }

    .description {
      font-size: 1.1rem;
      max-width: 800px;
      margin: 0 auto;
      line-height: 1.6;
      color: #333;
    }

    .artists-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 2rem;
    }

    .artist-card {
      display: block;
      text-decoration: none;
      color: inherit;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s, box-shadow 0.2s;
      cursor: pointer;
      overflow: hidden;
    }

    .artist-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    }

    .artist-image {
      width: 100%;
      height: 220px;
      overflow: hidden;
      background: rgba(0, 0, 0, 0.1);
    }

    .artist-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s;
    }

    .artist-card:hover .artist-image img {
      transform: scale(1.05);
    }

    .artist-info {
      padding: 1.5rem;
    }

    .artist-name {
      font-size: 1.4rem;
      margin-bottom: 0.5rem;
      color: #000;
      font-weight: bold;
      line-height: 1.3;
    }

    .artist-movement {
      font-size: 1rem;
      margin-bottom: 0.75rem;
      color: #222;
      font-weight: 600;
    }

    .artwork-title {
      font-size: 0.95rem;
      color: #555;
      font-style: italic;
      line-height: 1.4;
    }

    @media (max-width: 768px) {
      .artists-grid {
        grid-template-columns: 1fr;
      }

      .artists-header h1 {
        font-size: 2rem;
      }

      .artist-name {
        font-size: 1.2rem;
      }
    }

    @media (max-width: 480px) {
      .artists-container {
        padding: 1rem;
      }

      .artist-image {
        height: 180px;
      }
    }
  </style>
</BaseLayout>

