---
import HiddenGrammarLayout from '../layouts/HiddenGrammarLayout.astro';
import { analysisModes } from '../data/analysisModes.js';
---

<HiddenGrammarLayout
  title="Hidden Grammar"
  description="Evidence-based visual analysis using the Hidden Grammar framework."
>
  <div class="hg-page">
    <div class="hg-page-header">
      <h1>Choose an Analysis Mode</h1>
      <p>Select the category that best describes the work you're analyzing. Each mode loads prompts and fields tuned for that context.</p>
    </div>

    <div class="hg-grid hg-modes-grid">
      {analysisModes.map((mode, i) => (
        <a href={`/hidden-grammar/modes/${mode.id}`} class="hg-card hg-mode-card">
          <p class="hg-card-label">Mode {i + 1}</p>
          <h2 class="hg-card-title">{mode.label}</h2>
          <p class="hg-card-desc">{mode.description}</p>
          <div class="hg-card-meta">
            <span class="hg-meta-pill">{mode.prompts.length} prompts</span>
            <span class="hg-meta-pill">{mode.subModes.length} sub-modes</span>
          </div>
          <p class="hg-card-arrow">Select prompts →</p>
        </a>
      ))}
    </div>

    <div class="hg-home-footer">
      <div class="hg-info-strip">
        <div class="hg-info-item">
          <span class="hg-info-label">Framework</span>
          <span class="hg-info-value">11 Roots · 54 Principles</span>
        </div>
        <div class="hg-info-item">
          <span class="hg-info-label">Protocol</span>
          <span class="hg-info-value">RAP — evidence-gated interpretation</span>
        </div>
        <div class="hg-info-item">
          <span class="hg-info-label">Output</span>
          <span class="hg-info-value">Structured analysis + interrogation</span>
        </div>
      </div>
    </div>
  </div>
</HiddenGrammarLayout>

<style>
  .hg-modes-grid {
    grid-template-columns: repeat(auto-fill, minmax(min(100%, 320px), 1fr));
    gap: 1.25rem;
    margin-bottom: 3rem;
  }

  .hg-mode-card {
    min-height: 220px;
  }

  .hg-card-meta {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-top: 0.25rem;
  }

  .hg-meta-pill {
    display: inline-block;
    padding: 0.1875rem 0.625rem;
    background: #eef2ff;
    color: #4f46e5;
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  /* Info strip */
  .hg-home-footer {
    border-top: 1px solid #e2e8f0;
    padding-top: 2rem;
  }

  .hg-info-strip {
    display: flex;
    gap: 2.5rem;
    flex-wrap: wrap;
  }

  .hg-info-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .hg-info-label {
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: #94a3b8;
  }

  .hg-info-value {
    font-size: 0.9375rem;
    color: #475569;
    font-weight: 500;
  }

  @media (max-width: 640px) {
    .hg-modes-grid {
      grid-template-columns: 1fr;
    }

    .hg-info-strip {
      gap: 1.25rem;
    }
  }
</style>
